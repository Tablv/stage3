<!DOCTYPE html>
<html lang='zh-cn'>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>首页</title>
    <link href='/css/bootstrap.css' rel='stylesheet'>
    <!--[if lt IE 9]>
    <script src='boot/js/html5shiv.min.js'></script>
    <script src='boot/js/respond.min.js'></script>
    <![endif]-->
</head>

<body>
    <nav class="navbar navbar-default navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">全部相册</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/toUpload">上传图片</a></li>
                    <li><a href="/newDir">新建相册</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <ul>
            <% for(var i = 0; i<pics.length;i++){ %>
            <li class="show_pic">
                <a href="#">
                    <img src="/<%= dirName %>/<%= pics[i] %>" width="100px" data-toggle="modal" data-target="#myModal">
                </a>
            </li>
            <% } %>
        </ul>
        <!-- Modal -->
        <div class="modal fade" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
              <img src="">
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src='/js/index.js'></script>
    <script src='/js/jquery.min.js'></script>
    <script src='/js/bootstrap.js'></script>
</body>

</html>